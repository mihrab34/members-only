<%= simple_form_for(@post) do |form| %>
  <% form.error_notification %>
    
  <div class="container">
    <div class="form-group">
      <%= form.input :title %>
    </div>

    <div class="form-group">
      <%= form.input :body, input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Enter a new post..."%>
    </div>

    <div class="action form-group">
      <%= form.button :submit, class: "btn-info mt-4" %>
    </div>
  </div>
<% end %>
