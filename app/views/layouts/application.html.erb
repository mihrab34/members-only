<!DOCTYPE html>
<html>

<head>
  <title>MembersApp</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <% if flash[:notice]%>
    <div class="notification danger">
      <p class="notice"><%= notice %></p>
    </div>
  <% end %>
  <% if flash[:alert]%>
    <div class="notification danger">
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>
  <nav class="navbar navbar-expand-md navbar-dark bg-info navbar-static-top">
    <div class="container-fluid">
      <button type="button" class="navbar-toggler collapsed" data-toggle="collapse" data-target="#navbarNav" aria-expanded="false">
        <span class="navbar-toggler-icon sr-only"></span>
      </button>
      <a href="#"><%= link_to "Club Membership", root_path, class: 'navbar-brand' %></a>
      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="nav navbar-nav ml-auto">
          
          <% if member_signed_in? %>
            <li class="nav-item">
              <%= link_to current_member.name, edit_member_registration_path, class: "nav-link m2" %>
            </li>
            <li class="nav-item">
              <%= link_to 'New Post', new_post_path , class: "nav-link btn btn-lg btn-outline-dark mr-3 m2" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_member_session_path,method: :delete, class: "nav-link btn btn-lg btn-outline-dark m2" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign In", new_member_session_path, class: "nav-link btn btn-lg btn-outline-dark  mr-3 m2" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_member_registration_path, class: "nav-link btn btn-info btn-lg btn-outline-dark m2" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <%= yield %>
</body>

</html>
